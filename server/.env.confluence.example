# Confluence Configuration Example
# Copy this to your .env file and update with your values

# For Confluence Cloud OAuth
CONFLUENCE_OAUTH_CLIENT_ID=your_oauth_client_id
CONFLUENCE_OAUTH_CLIENT_SECRET=your_oauth_client_secret
CONFLUENCE_OAUTH_REDIRECT_URI=http://localhost:8000/api/v1/confluence/oauth/callback

# Encryption key for storing credentials (generate with: openssl rand -hex 32)
CONFLUENCE_ENCRYPTION_KEY=your_32_byte_encryption_key_here

# Import limits and rate limiting
CONFLUENCE_MAX_IMPORT_SIZE=100  # Maximum import size in MB
CONFLUENCE_RATE_LIMIT=10  # Requests per second
CONFLUENCE_SYNC_INTERVAL=3600  # Auto-sync interval in seconds (1 hour)

# Celery configuration for background tasks
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0